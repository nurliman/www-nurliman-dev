---
import TheProgressBar from "@/components/TheProgressBar";

export type Skill = {
  name: string;
  value: number;
};

type Props = {
  data: Array<Skill> | ReadonlyArray<Skill>;
};

const { data } = Astro.props;
---

<ul class="flex flex-col">
  {
    data?.map?.((skill) => (
      <li class="mb-3 flex flex-col">
        <div class="mb-0.5 flex items-center justify-between">
          <div class="text-sm font-medium">{skill.name}</div>
          <div class="text-xs font-medium text-black/70 dark:text-white/70">
            {skill.value * 100 + "%"}
          </div>
        </div>
        <TheProgressBar progress={skill.value} />
      </li>
    ))
  }
</ul>

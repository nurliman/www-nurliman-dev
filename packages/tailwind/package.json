{
  "name": "@nurliman.dev/tailwind",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./styles.css"
  },
  "scripts": {
    "build": "npm run build:jss && npm run build:bundle-js && npm run build:bundle-css",
    "build:jss": "bun run scripts/build-jss.ts",
    "build:bundle-js": "bun run scripts/bundle-js.ts",
    "build:bundle-css": "postcss src/styles.css -d dist -m",
    "clean": "npx -y concurrently \"npm:clean:*\"",
    "clean:turbo": "npx -y del-cli .turbo",
    "clean:node_modules": "npx -y del-cli node_modules",
    "clean:dist": "npx -y del-cli dist"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/object-inspect": "^1.13.0",
    "@types/postcss-import": "^14.0.3",
    "cssnano": "^7.0.4",
    "dedent": "^1.5.3",
    "object-inspect": "^1.13.2",
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "postcss-dark-theme-class": "^1.3.0",
    "postcss-import": "^16.1.0",
    "postcss-js": "^4.0.1",
    "pupa": "^3.1.0",
    "slash": "^5.1.0",
    "tailwindcss": "^3.4.6"
  },
  "peerDependencies": {
    "tailwindcss": ">=3"
  }
}

{
  "name": "www-nurliman-dev",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "changeset": "changeset",
    "lint-staged": "lint-staged",
    "format": "prettier --write --cache .",
    "prepare:turbo": "turbo telemetry disable",
    "prepare": "concurrently \"npm:prepare:*\""
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.6",
    "@types/bun": "latest",
    "@types/node": "^22",
    "concurrently": "^9.2.0",
    "lefthook": "^1.12.3",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-imports": "npm:@ianvs/prettier-plugin-sort-imports@^4.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook"
  ],
  "lint-staged": {
    "**/*.+(js|ts|cjs|mjs|d.cts|d.mts|jsx|tsx|json|jsonc)": "prettier --write --cache",
    "**/*.+(astro|css|pcss|postcss|scss|html|md|svelte|yml|yaml)": "prettier --write --cache"
  }
}

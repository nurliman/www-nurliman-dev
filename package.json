{
  "name": "www-nurliman-dev",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "biome check .",
    "lint:fix": "npm run lint -- --apply",
    "lint-staged": "lint-staged",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@nurliman/file-exists-cli": "^0.2.1",
    "@types/bun": "latest",
    "@types/node": "^20",
    "lefthook": "^1.6.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tsup": "^8.0.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "**/*.+(js|mjs|cjs|jsx|ts|cts|mts|tsx|astro|css|scss|json|yml|yaml)": "biome check --apply --no-errors-on-unmatched"
  },
  "packageManager": "bun@1.1.7"
}

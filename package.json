{
  "name": "www-nurliman-dev",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.+(js|mjs|cjs|jsx|ts|tsx|css|scss|md|json|yml|yaml)\" --ignore .gitignore --ignore .prettierignore",
    "format-staged": "pretty-quick --staged --ignore .gitignore --ignore .prettierignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.10.14"
  },
  "lint-staged": {
    "*.+(js|mjs|cjs|jsx|ts|tsx)": "eslint --cache --fix"
  },
  "packageManager": "pnpm@8.7.6"
}

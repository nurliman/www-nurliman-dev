{
  "name": "www-nurliman-dev",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.27",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint-staged": "lint-staged",
    "format": "prettier --write --cache .",
    "is-ci": "bunx -y check-env-cli CI=1",
    "prepare:lefthook": "bun run is-ci || lefthook install",
    "prepare:nextjs": "next telemetry disable",
    "prepare:turbo": "turbo telemetry disable",
    "prepare": "bunx -y concurrently \"npm:prepare:*\""
  },
  "devDependencies": {
    "@nurliman/file-exists-cli": "^1.0.1",
    "@types/bun": "latest",
    "@types/node": "^20",
    "bun-plugin-dts-auto": "0.11.1",
    "lefthook": "^1.11.14",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "prettier-plugin-sort-imports": "npm:@ianvs/prettier-plugin-sort-imports@^4.4.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "trustedDependencies": [
    "@nurliman.dev/emails",
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook",
    "sharp"
  ],
  "patchedDependencies": {
    "zod-to-json-schema@3.23.4": "patches/zod-to-json-schema@3.23.4.patch"
  },
  "lint-staged": {
    "**/*.+(js|ts|cjs|mjs|d.cts|d.mts|jsx|tsx|json|jsonc)": "prettier --write --cache",
    "**/*.+(astro|css|pcss|postcss|scss|html|md|svelte|yml|yaml)": "prettier --write --cache"
  }
}
